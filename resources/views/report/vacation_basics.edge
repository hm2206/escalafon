<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {{ style(link + "/css/default.css") }}
    {{ style(link + "/css/report.css") }}
    <title>Reporte de Vacaciones</title>
</head>

<body class="a4">

    <div class="float-header" style="position: relative;">
        <table class="table">
            <thead>
                <tr>
                    <th width="10%"><img class="logo small" src="{{ link + '/images/peru.png' }}"></th>
                    <th>
                        <div class="uppercase f-13">{{ $entity.name }}</div>
                    </th>
                    <th width="10%"><img class="logo mini" src="{{ $entity.logo }}"></th>
                </tr>
                <tr>
                    <td></td>
                    <td><hr class="hr-dashed"/></td>
                    <td></td>
                </tr>
            </thead>
        </table>
    </div>

    <h3 class="text-center mt-1 pt-1 uppercase f-15">REPORTE DE VACACIONES</h3>
    
    <table class="table f-12 bbt-1">
        <thead class="text-center" style="page-break-inside: avoid;">
            <tr>
                <th width="50px" class="bbb-1 bbl-1 f-13 bbt-1" rowspan="2">
                    N°
                </th>
                <th width="200px" class="bbb-1 bbl-1 f-13 bbt-1" rowspan="2">
                    Apellidos y Nombres
                </th>
                <th width="50px" class="bbb-1 bbl-1 f-13 bbt-1" rowspan="2">
                    Tip. Categoría
                </th>
                <th width="50px" class="bbb-1 bbl-1 f-13 bbt-1" rowspan="2">
                    Situación
                </th>
                <th width="50px" class="bbb-1 bbl-1 f-13 bbt-1 text-center" rowspan="2">
                    Año
                </th>
                <th width="50px" class="bbb-1 bbl-1 f-13 bbt-1" rowspan="2">
                    Dias Prog.
                </th>
                <th width="50px" class="bbb-1 bbl-1 f-13 bbt-1" rowspan="2">
                    Dias Ejecutados.
                </th>
                <th width="50px" class="bbl-1 bbb-1 bbr-1 f-13 bbt-1" rowspan="2">Saldo</th>
            </tr>
        </thead>
        <tbody>
            @each(data in datos)
                <tr>
                    <td style="padding-top: 0.4em;" class="bbl-1 bbb-1 f-13 text-center">
                        {{ data.count }}
                    </td>
                    <td style="padding: 0.2em 0.5em;" class="bbl-1 bbb-1 f-13 uppercase">
                        {{ data.person.fullname }}
                    </td>
                    <td style="padding: 0.1em 0.4em;" class="bbl-1 bbb-1 f-13">
                        {{ data.displayCategoria }}
                    </td>
                    <td style="padding: 0.1em 0.4em;" class="bbl-1 bbb-1 f-13">
                        {{ data.pap }}
                    </td>
                    <td style="padding: 0.1em 0.4em;" class="bbl-1 bbb-1 f-13 text-center">
                        {{ data.year }}
                    </td>
                    <td style="padding-top: 0.4em;" class="bbl-1 bbb-1 f-13 text-center">
                        {{ data.scheduled_days }}
                    </td>
                    <td style="padding-top: 0.4em;" class="bbl-1 bbb-1 f-13 text-center">
                        {{ data.days_used }}
                    </td>
                    <td style="padding-top: 0.4em;" class="bbr-1 bbb-1 bbl-1 f-13 text-center">
                        {{ data.days_diff }}
                    </td>
                </tr>
            @endeach
        </tbody>
    </table>
    <br>
</body>
</html>