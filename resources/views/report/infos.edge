<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {{ style(link + "/css/default.css") }}
    {{ style(link + "/css/report.css") }}

    <style>
        body {
            width: auto;
            height: auto;
        }
    </style>

    <title>Datos de los contratos</title>
</head>
<body>

    <div class="float-header" style="position: relative;">
        <table class="table">
            <thead>
                <tr>
                    <th width="10%"><img class="logo long" src="{{ link + '/images/peru.png' }}"></th>
                    <th>
                        <div class="f-9">"Año de la Universalización de la salud"</div>
                        <div class="uppercase f-14">{{ $entity.name }}</div>
                    </th>
                    <th width="10%"><img class="logo small" src="{{ $entity.logo }}"></th>
                </tr>
                <tr>
                    <td></td>
                    <td><hr class="hr-dashed"/></td>
                    <td></td>
                </tr>
            </thead>
        </table>
    </div>

    <div class="mark-water" style="width: 100%;">
        <img src="{{ $entity.logo }}" style="width: 200px;">
        <h2 class="uppercase mt-2" style="opacity: 0.3;">{{ $entity.name }}</h2>
    </div>

    <div class="mt-3">

        <h4>Resultados: {{ infos.length || 0 }}</h4>

        <br>

        <table class="table bbt-1 text-center">
            <thead>
                <tr>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">N°</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="25%">Apellidos y Nombres</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">Tipo</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">Documento</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="10%">E-mail</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">Planilla</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">Tip.Cat</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">Fecha de cese</th>
                    <th class="bbb-1 bbl-1 bbt-1 bbr-1 f-11" width="15%">Estado</th>
                </tr>
            </thead>
            <tbody>
                @each((info, iter) in infos)
                    <tr style="page-break-inside: avoid;">
                        <td class="bbb-1 bbl-1 f-10 text-text">{{ iter + 1 }}</td>
                        <td class="bbb-1 bbl-1 f-10 text-left capitalize pl-1">{{ info.person.fullname || "" }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ info.person.document_type.name || "" }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ info.person.document_number }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ info.person.email_contact }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ info.displayPlanilla }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ info.displayCategoria }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ info.fecha_de_cese }}</td>
                        <td class="bbb-1 bbl-1 bbr-1 f-10">{{ info.estado ? 'Activo' : 'Deshabilitado' }}</td>
                    </tr>
                @endeach
            </tbody>
        </table>
    </div>
    
</body>
</html>