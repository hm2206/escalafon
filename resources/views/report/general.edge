<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {{ style(link + "/css/default.css") }}
    {{ style(link + "/css/report.css") }}

    <style>
        body {
            width: auto;
            height: auto;
        }
    </style>

    <title>Datos Generales</title>
</head>
<body>

    <div class="float-header" style="position: relative;">
        <table class="table">
            <thead>
                <tr>
                    <th width="10%"><img class="logo long" src="{{ link + '/images/peru.png' }}"></th>
                    <th>
                        <div class="uppercase f-14">{{ $entity.name }}</div>
                    </th>
                    <th width="10%"><img class="logo small" src="{{ $entity.logo }}"></th>
                </tr>
                <tr>
                    <td></td>
                    <td><hr class="hr-dashed"/></td>
                    <td></td>
                </tr>
            </thead>
        </table>
    </div>

    <div class="mark-water" style="width: 100%;">
        <img src="{{ $entity.logo }}" style="width: 200px;">
        <h2 class="uppercase mt-2" style="opacity: 0.3;">{{ $entity.name }}</h2>
    </div>

    <div class="mt-3">

        <h4>Resultados: {{ works.length || 0 }}</h4>

        <br>

        <table class="table text-center">
            <thead>
                <tr>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="5%">N°</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="5%">Doc</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="5%">Numero</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="25%">Trabajador</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="5%">Sexo</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="5%">Estado Civil</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="7%">Fecha Nacimiento</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="7%">Fecha Inicio Laboral</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="7%">Area/Oficina</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="10%">Cat/Nivel Rem</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="10%">Reg. Labor</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="5%">Ubigeo</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="5%">Código Cuspp</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="5%">Código Es Salud</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="5%">Teléfono</td>
                    <td class="bbb-1 bbl-1 bbt-1 f-10" width="5%">Mail</td>
                    <td class="bbb-1 bbl-1 bbt-1 bbr-1 f-10" width="10%">Dirección</td>
                </tr>
            </thead>
            <tbody>
                @each((work, iter) in works)
                    <tr style="page-break-inside: avoid;">
                        <td class="bbb-1 bbl-1 f-9 text-text">{{ iter + 1 }}</td>
                        <td class="bbb-1 bbl-1 f-9 text-left capitalize pl-1">{{ work.person.document_type.name || "" }}</td>
                        <td class="bbb-1 bbl-1 f-9">{{ work.person.document_number || "" }}</td>
                        <td class="bbb-1 bbl-1 f-9 text-left capitalize pl-1">{{ work.person.fullname || "" }}</td>
                        <td class="bbb-1 bbl-1 f-9">{{ work.person.gender || "" }}</td>
                        <td class="bbb-1 bbl-1 f-9">{{ work.person.marital_status || "" }}</td>
                        <td class="bbb-1 bbl-1 f-9">{{ work.person.date_of_birth || "" }}</td>
                        <td class="bbb-1 bbl-1 f-9">{{ work.fecha_de_ingreso }}</td>
                        <td class="bbb-1 bbl-1 f-9">{{ work.dependencia.nombre || "--" }}</td>
                        <td class="bbb-1 bbl-1 f-9 capitalize">{{ work.displayCategoria }}</td>
                        <td class="bbb-1 bbl-1 f-9 capitalize">{{ work.displayCargo }}</td>
                        <td class="bbb-1 bbl-1 f-9">
                            <span>{{ work.person.badge.cod_ubi || "" }}</span>
                            <span> - </span>
                            <span>{{ work.person.badge.departamento || "" }}</span>
                            <span> - </span>
                            <span>{{ work.person.badge.provincia || "" }}</span>
                            <span> - </span>
                            <span>{{ work.person.badge.distrito || "" }}</span>
                        </td>
                        <td class="bbb-1 bbl-1 f-9">{{ work.numero_de_cussp || "" }}</td>
                        <td class="bbb-1 bbl-1 f-9">{{ work.numero_de_essalud || "" }}</td>
                        <td class="bbb-1 bbl-1 f-9">{{ work.person.phone || "" }}</td>
                        <td class="bbb-1 bbl-1 f-9">{{ work.person.email_contact || "" }}</td>
                        <td class="bbb-1 bbl-1 bbr-1 f-9">{{ work.person.address || '---' }}</td>
                    </tr>
                @endeach
            </tbody>
        </table>
    </div>
    
</body>
</html>