<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {{ style(link + "/css/default.css") }}
    {{ style(link + "/css/report.css") }}
    
    <style>
        body {
            width: auto;
        }
    </style>

    <title>Reporte de Papeleta</title>
</head>
<body>

    <div class="float-header" style="position: relative;">
        <table class="table">
            <thead>
                <tr>
                    <th width="10%"><img class="logo small" src="{{ link + '/images/peru.png' }}"></th>
                    <th>
                        <div class="f-9">"Año de la Universalización de la salud"</div>
                        <div class="uppercase f-13">{{ $entity.name }}</div>
                    </th>
                    <th width="10%"><img class="logo mini" src="{{ $entity.logo }}"></th>
                </tr>
                <tr>
                    <td></td>
                    <td><hr class="hr-dashed"/></td>
                    <td></td>
                </tr>
            </thead>
        </table>
    </div>

    <div class="mark-water" style="width: 100%;">
        <img src="{{ $entity.logo }}" style="width: 200px;">
        <h2 class="uppercase mt-2" style="opacity: 0.3;">{{ $entity.name }}</h2>
    </div>

    <div class="mt-3">

        <h4>Resultados: {{ ballots.length || 0 }}</h4>

        <br>

        <table class="table bbt-1 text-center">
            <thead>
                <tr>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">N°</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="25%">Apellidos y Nombres</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">Tipo</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">Documento</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">N° Papeleta</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">Motivo</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">Fecha</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">Modo</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">H. Entrada</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">H. Salida</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">H. Retorno</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">Total Min</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11" width="5%">¿Aplica a descuento?</th>
                    <th class="bbb-1 bbl-1 bbt-1 f-11 bbr-1" width="20%">Justificación</th>
                </tr>
            </thead>
            <tbody>
                @each((ballot, iter) in ballots)
                    <tr style="page-break-inside: avoid;">
                        <td class="bbb-1 bbl-1 f-10 text-text">{{ iter + 1 }}</td>
                        <td class="bbb-1 bbl-1 f-10 text-left capitalize pl-1">{{ ballot.person.fullname || "" }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ ballot.person.document_type.name || "" }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ ballot.person.document_number }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ ballot.ballot_number }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ ballot.motivo }}</td>
                        <th class="bbb-1 bbl-1 f-10">{{ ballot.date }}</th>
                        <td class="bbb-1 bbl-1 f-10">{{ ballot.modo == 'ENTRY' ? 'Entrada' : 'Salida' }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ ballot.time_start }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ ballot.time_over }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ ballot.time_return }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ ballot.total }}</td>
                        <td class="bbb-1 bbl-1 f-10">{{ ballot.is_applied  ? 'Si' : 'No'}}</td>
                        <td class="bbb-1 bbl-1 bbr-1 f-10">{{ ballot.justification }}</td>
                    </tr>
                @endeach
            </tbody>
        </table>
    </div>
    
</body>
</html>